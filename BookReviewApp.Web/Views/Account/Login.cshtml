@model BookReviewApp.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="mb-4 text-center">Sign In</h2>
            <form asp-action="Login" method="post" novalidate>
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <label asp-for="EmailOrUsername" class="form-label"></label>
                    <input asp-for="EmailOrUsername" class="form-control" />
                    <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <button type="submit" class="btn btn-primary w-100" aria-label="Login to your account">Login</button>
            </form>
            <div class="mt-3 text-center">
                <a asp-action="ForgotPassword" asp-controller="Account" aria-label="Forgot your password?">Forgot Password?</a>
            </div>
            <div class="mt-3 text-center">
                <span>Don't have an account?</span> <a asp-action="Register" asp-controller="Account" aria-label="Register a new account">Register</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 