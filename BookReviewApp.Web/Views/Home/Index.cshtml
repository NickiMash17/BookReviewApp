@model dynamic

@{
    ViewData["Title"] = "Home";
}



<!-- Hero Section -->
<div class="hero-section text-white text-center py-5 mb-5 position-relative" style="padding-top: 5rem; padding-bottom: 5rem; margin-bottom: 4rem;">
    <div class="hero-bg-svg position-absolute w-100 h-100" style="top:0;left:0;z-index:0;pointer-events:none;">
        <svg viewBox="0 0 1440 320" fill="none" xmlns="http://www.w3.org/2000/svg" style="width:100%;height:100%;position:absolute;top:0;left:0;"><path fill="#fff" fill-opacity="0.08" d="M0,160L60,170.7C120,181,240,203,360,197.3C480,192,600,160,720,133.3C840,107,960,85,1080,101.3C1200,117,1320,171,1380,197.3L1440,224L1440,0L1380,0C1320,0,1200,0,1080,0C960,0,840,0,720,0C600,0,480,0,360,0C240,0,120,0,60,0L0,0Z"></path></svg>
    </div>
    <div class="container position-relative" style="z-index:1;">
        <div class="row align-items-center">
            <div class="col-lg-8 mx-auto">
                <span class="badge bg-warning text-dark fs-6 mb-3 px-4 py-2 shadow-sm" style="border-radius: 1rem; letter-spacing: 1px;">Join the Community</span>
                <h1 class="display-4 fw-bold mb-3">
                    <i class="bi bi-book-half text-warning"></i> 
                    Discover Your Next Great Read
                </h1>
                <p class="lead mb-4 fs-5">
                    Find, review, and share the best books with thousands of passionate readers. Your next adventure is just a page away.
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap mb-4">
                    <a asp-controller="Books" asp-action="Index" class="btn btn-warning btn-lg shadow">
                        <i class="bi bi-search"></i> Browse Books
                    </a>
                    <a asp-controller="Books" asp-action="Create" class="btn btn-outline-light btn-lg shadow">
                        <i class="bi bi-plus-circle"></i> Add Book
                    </a>
                    @if (!(User?.Identity?.IsAuthenticated ?? false)) {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg shadow">
                            <i class="bi bi-person-plus"></i> Join Now
                        </a>
                    } else {
                        <span class="d-block mt-3 fs-5">Welcome back, <span class="fw-bold">@User.Identity.Name</span>!</span>
                    }
                </div>
                <form asp-controller="Books" asp-action="Index" method="get" class="d-flex justify-content-center mt-3" style="max-width: 500px; margin: 0 auto;">
                    <input type="text" name="search" class="form-control form-control-lg me-2" placeholder="Search for books, authors, or genres..." aria-label="Search books">
                    <button type="submit" class="btn btn-primary btn-lg"><i class="bi bi-search"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section with animated numbers -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-book text-primary"></i>
                </div>
                <h3 class="stat-number" data-animate="@ViewBag.TotalBooks">0</h3>
                <p class="stat-label">Books in Library</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-people text-success"></i>
                </div>
                <h3 class="stat-number" data-animate="@ViewBag.TotalAuthors">0</h3>
                <p class="stat-label">Authors</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-star text-warning"></i>
                </div>
                <h3 class="stat-number" data-animate="@ViewBag.TotalReviews">0</h3>
                <p class="stat-label">Reviews</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-heart text-danger"></i>
                </div>
                <h3 class="stat-number" data-animate="@ViewBag.AverageRating">0</h3>
                <p class="stat-label">Avg Rating</p>
            </div>
        </div>
    </div>
</div>

<!-- Testimonial Carousel -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <h2 class="section-title text-center mb-4">
                <i class="bi bi-chat-quote text-info"></i> What Readers Say
            </h2>
        </div>
    </div>
    <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="testimonial-card p-4 text-center bg-white rounded shadow-sm mx-auto" style="max-width: 600px;">
                    <i class="bi bi-quote text-primary fs-1 mb-3"></i>
                    <p class="lead mb-3">“This app helped me discover so many amazing books and connect with fellow readers!”</p>
                    <div class="fw-bold">- Sarah, Book Lover</div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="testimonial-card p-4 text-center bg-white rounded shadow-sm mx-auto" style="max-width: 600px;">
                    <i class="bi bi-quote text-primary fs-1 mb-3"></i>
                    <p class="lead mb-3">“The reviews and recommendations are spot on. I love the community feel!”</p>
                    <div class="fw-bold">- James, Avid Reader</div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="testimonial-card p-4 text-center bg-white rounded shadow-sm mx-auto" style="max-width: 600px;">
                    <i class="bi bi-quote text-primary fs-1 mb-3"></i>
                    <p class="lead mb-3">“A beautiful, easy-to-use app for book lovers of all kinds.”</p>
                    <div class="fw-bold">- Priya, Literature Enthusiast</div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Featured Books Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <h2 class="section-title text-center mb-4">
                <i class="bi bi-star-fill text-warning"></i> Featured Books
            </h2>
        </div>
    </div>
    <div class="row">
        @if (ViewBag.FeaturedBooks != null)
        {
            @foreach (var book in ViewBag.FeaturedBooks)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="book-card h-100">
                        <div class="book-cover">
                            <img src="@(book.CoverImageUrl ?? "/images/placeholder.jpg")"
                                 class="img-fluid"
                                 alt="@book.Title"
                                 onerror="this.src='/images/placeholder.jpg'" />
                            <div class="book-overlay">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" 
                                   class="btn btn-warning btn-sm">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                        <div class="book-info p-3">
                            <h5 class="book-title">@book.Title</h5>
                            <p class="book-author text-muted">
                                <i class="bi bi-person"></i> @(book.Author?.Name ?? "Unknown")
                            </p>
                            <div class="book-rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                                <span class="ms-2 text-muted">@book.PublishedDate.ToString("yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Categories Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <h2 class="section-title text-center mb-4">
                <i class="bi bi-collection text-primary"></i> Popular Categories
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="category-card text-center p-4">
                <div class="category-icon mb-3">
                    <i class="bi bi-book text-primary"></i>
                </div>
                <h4>Fiction</h4>
                <p class="text-muted">Explore imaginative worlds and compelling stories</p>
                <a href="#" class="btn btn-outline-primary">Browse Fiction</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="category-card text-center p-4">
                <div class="category-icon mb-3">
                    <i class="bi bi-lightbulb text-success"></i>
                </div>
                <h4>Non-Fiction</h4>
                <p class="text-muted">Discover knowledge and real-world insights</p>
                <a href="#" class="btn btn-outline-success">Browse Non-Fiction</a>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="category-card text-center p-4">
                <div class="category-icon mb-3">
                    <i class="bi bi-heart text-danger"></i>
                </div>
                <h4>Romance</h4>
                <p class="text-muted">Fall in love with captivating love stories</p>
                <a href="#" class="btn btn-outline-danger">Browse Romance</a>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="cta-section text-white text-center py-5 mb-5">
    <div class="container">
        <h2 class="mb-4">Ready to Start Your Reading Journey?</h2>
        <p class="lead mb-4">Join our community of book lovers and start reviewing your favorite books today.</p>
        <a asp-controller="Books" asp-action="Create" class="btn btn-warning btn-lg">
            <i class="bi bi-plus-circle"></i> Add Your First Book
        </a>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
    }
    
    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="white" opacity="0.1"/><circle cx="75" cy="75" r="1" fill="white" opacity="0.1"/><circle cx="50" cy="10" r="0.5" fill="white" opacity="0.1"/><circle cx="10" cy="60" r="0.5" fill="white" opacity="0.1"/><circle cx="90" cy="40" r="0.5" fill="white" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>');
        pointer-events: none;
    }
    
    .hero-section > .container {
        position: relative;
        z-index: 1;
    }
    
    .stat-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
    }
    
    .stat-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        color: #666;
        font-size: 1.1rem;
        margin: 0;
    }
    
    .section-title {
        font-weight: bold;
        color: #333;
        position: relative;
        padding-bottom: 1rem;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
    }
    
    .book-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .book-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }
    
    .book-cover {
        position: relative;
        overflow: hidden;
    }
    
    .book-cover img {
        width: 100%;
        height: 300px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .book-card:hover .book-cover img {
        transform: scale(1.05);
    }
    
    .book-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }
    
    .book-card:hover .book-overlay {
        opacity: 1;
    }
    
    .book-title {
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #333;
    }
    
    .book-author {
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }
    
    .book-rating {
        font-size: 0.8rem;
    }
    
    .category-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }
    
    .category-card:hover {
        transform: translateY(-5px);
    }
    
    .category-icon {
        font-size: 3rem;
    }
    
    .cta-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
    }
</style>
