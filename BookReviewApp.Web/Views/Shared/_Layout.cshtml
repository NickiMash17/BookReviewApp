<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book Review App</title>
    <meta name="description" content="Discover, review, and share your favorite books with our community of book lovers." />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookReviewApp.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Toast notifications CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <!-- Top notification bar -->
        <div class="top-notification-bar">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-white small">
                        <i class="bi bi-info-circle me-2"></i>
                        Welcome to BookReviewApp - Your literary journey starts here!
                    </span>
                    <div class="d-flex align-items-center">
                        <a href="mailto:support@bookreviewapp.com" class="text-white text-decoration-none small me-3">
                            <i class="bi bi-envelope me-1"></i>Support
                        </a>
                        <a href="@Url.Action("Privacy", "Home")" class="text-white text-decoration-none small">
                            <i class="bi bi-shield-lock me-1"></i>Privacy
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top" aria-label="Main navigation">
            <div class="container">
                <!-- Brand Logo -->
                <a class="navbar-brand d-flex align-items-center me-5" asp-controller="Home" asp-action="Index">
                    <div class="brand-logo me-3">
                        <i class="bi bi-book text-primary fs-3"></i>
                    </div>
                    <div class="brand-text">
                        <span class="fw-bold fs-4 text-primary">BookReview</span>
                        <span class="fw-light fs-6 text-muted d-block">App</span>
                    </div>
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Content -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- Main Navigation Links -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-4">
                        <li class="nav-item me-3">
                            <a class="nav-link nav-link-enhanced" asp-controller="Home" asp-action="Index" aria-label="Home">
                                <i class="bi bi-house-door-fill me-2"></i>
                                <span class="nav-text">Home</span>
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link nav-link-enhanced" asp-controller="Books" asp-action="Index" aria-label="Books">
                                <i class="bi bi-book-fill me-2"></i>
                                <span class="nav-text">Books</span>
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link nav-link-enhanced" asp-controller="Authors" asp-action="Index" aria-label="Authors">
                                <i class="bi bi-people-fill me-2"></i>
                                <span class="nav-text">Authors</span>
                            </a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link nav-link-enhanced" asp-controller="Reviews" asp-action="Index" aria-label="Reviews">
                                <i class="bi bi-star-fill me-2"></i>
                                <span class="nav-text">Reviews</span>
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link nav-link-enhanced" asp-controller="Dashboard" asp-action="Index" aria-label="Dashboard">
                                    <i class="bi bi-graph-up me-2"></i>
                                    <span class="nav-text">Dashboard</span>
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Search Bar -->
                    <div class="search-container me-3">
                        <div class="search-box">
                            <input type="text" class="form-control search-input" placeholder="Search books, authors..." aria-label="Search">
                            <button class="btn search-btn" type="button" aria-label="Search">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Right Side Navigation -->
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            var avatarUrl = "/images/placeholder.jpg";
                            var picClaim = User.Claims.FirstOrDefault(c => c.Type == "ProfilePictureUrl")?.Value;
                            if (!string.IsNullOrEmpty(picClaim)) {
                                avatarUrl = picClaim;
                            } else {
                                var seed = User.Identity.Name ?? User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value ?? "user";
                                avatarUrl = $"https://api.dicebear.com/7.x/identicon/svg?seed={Uri.EscapeDataString(seed)}";
                            }
                            
                            <!-- Admin Dashboard Link -->
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item me-2">
                                    <a class="btn btn-danger btn-sm admin-btn" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-lock me-1"></i>
                                        <span class="d-none d-md-inline">Admin</span>
                                    </a>
                                </li>
                            }

                            <!-- Notifications -->
                            <li class="nav-item me-2">
                                <button class="btn btn-outline-secondary btn-sm position-relative" type="button" aria-label="Notifications">
                                    <i class="bi bi-bell"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                        3
                                    </span>
                                </button>
                            </li>

                            <!-- User Menu -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-menu-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar me-2">
                                        <img src="@avatarUrl" alt="Avatar" class="rounded-circle" />
                                        <div class="online-indicator"></div>
                                    </div>
                                    <div class="user-info d-none d-md-block">
                                        <span class="user-name fw-semibold">@User.Identity.Name</span>
                                        <small class="user-status text-muted d-block">Online</small>
                                    </div>
                                    <i class="bi bi-chevron-down ms-2 text-muted"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end user-dropdown shadow-lg" aria-labelledby="userDropdown">
                                    <li class="dropdown-header">
                                        <div class="d-flex align-items-center">
                                            <img src="@avatarUrl" alt="Avatar" class="rounded-circle me-3" style="width:40px;height:40px;object-fit:cover;" />
                                            <div>
                                                <div class="fw-semibold">@User.Identity.Name</div>
                                                <small class="text-muted">@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value</small>
                                            </div>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Profile</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-heart me-2"></i>Favorites</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <!-- Guest User Actions -->
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary btn-sm" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>
                                    <span class="d-none d-md-inline">Login</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>
                                    <span class="d-none d-md-inline">Register</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container py-4">
        <!-- Toast notifications container -->
        <div id="toast-container" class="position-fixed top-0 end-0 p-3" style="z-index: 1055;"></div>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </main>

    <footer class="footer-blue mt-5 py-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 1.5rem 1.5rem 0 0;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <p class="mb-0 fw-bold fs-5">&copy; @DateTime.Now.Year Book Review App. All rights reserved.</p>
                    <p class="mb-0 mt-2">
                        <a href="@Url.Action("Privacy", "Home")" class="text-white text-decoration-none small">Privacy Policy</a>
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <div class="social-icons d-flex justify-content-center justify-content-md-end gap-3">
                        <a href="https://www.facebook.com/profile.php?id=100094123456789" target="_blank" aria-label="Facebook" class="text-white fs-4" title="Follow us on Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="https://www.tiktok.com/@bookreviewapp_official" target="_blank" aria-label="TikTok" class="text-white fs-4" title="Follow us on TikTok">
                            <i class="bi bi-tiktok"></i>
                        </a>
                        <a href="https://www.instagram.com/bookreviewapp_official" target="_blank" aria-label="Instagram" class="text-white fs-4" title="Follow us on Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="https://www.linkedin.com/in/nicolette-mashaba-b094a5221" target="_blank" aria-label="LinkedIn" class="text-white fs-4" title="Connect with us on LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Trademark Badge - positioned to not overlap footer -->
    <div class="trademark-badge">
        <span class="trademark-icon"><i class="bi bi-book"></i></span>
        &copy; @DateTime.Now.Year Nicolette Mashaba™
        <a href="https://www.linkedin.com/in/nicolette-mashaba-b094a5221" target="_blank" aria-label="LinkedIn" class="trademark-link"><i class="bi bi-linkedin"></i></a>
        <a href="https://nickimash.vercel.app/" target="_blank" aria-label="Portfolio" class="trademark-link"><i class="bi bi-globe2"></i></a>
        <a href="mailto:nene171408@gmail.com" aria-label="Email" class="trademark-link"><i class="bi bi-envelope"></i></a>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
