@model IEnumerable<BookReviewApp.Domain.Models.Book>

<div class="container">
    <h1>Book Reviews</h1>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
                <th>Published Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@(item.CoverImageUrl ?? "https://via.placeholder.com/150?text=No+Cover")" 
                             class="book-cover"
                             alt="@item.Title cover">
                    </td>
                    <td>@item.Title</td>
                    <td>@(item.Author?.Name ?? "Unknown")</td>
                    <td>@item.PublishedDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p class="mt-3">
        <a asp-action="Create" class="btn btn-primary">Add New Book</a>
    </p>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('img').forEach(img => {
                img.addEventListener('error', function() {
                    this.src = 'https://via.placeholder.com/150?text=No+Cover';
                });
            });
        });
    </script>
}