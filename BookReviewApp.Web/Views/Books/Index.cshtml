@model IEnumerable<BookReviewApp.Domain.Models.Book>

<div class="container">
    <h1>Book Reviews</h1>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
                <th>Published Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                        {
                            <img src="@book.CoverImageUrl" class="img-thumbnail" style="max-height: 100px;" alt="@book.Title cover">
                        }
                        else
                        {
                            <img src="/images/no-cover.png" class="img-thumbnail" style="max-height: 100px;" alt="No cover available">
                        }
                    </td>
                    <td>@book.Title</td>
                    <td>@(book.Author?.Name ?? "Unknown")</td>
                    <td>@book.PublishedDate.ToShortDateString()</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p class="mt-3">
        <a asp-action="Create" class="btn btn-primary">Add New Book</a>
    </p>
</div>